<!-- Footer -->
<footer class="footer">
    <div class="footer-content">
        <div class="footer-column">
            <h3>
                <% if (user && user.role === 'admin') { %>
                    FreshMart Admin
                <% } else { %>
                    About FreshMart
                <% } %>
            </h3>
            <p>
                <% if (user && user.role === 'admin') { %>
                    Manage inventory and orders efficiently.
                <% } else { %>
                    Neighborhood supermarket for fresh groceries and daily essentials.
                <% } %>
            </p>
            <% if (!user || user.role !== 'admin') { %>
            <div class="social-links">
                <a href="#"><i class="fab fa-facebook-f"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
            </div>
            <% } %>
        </div>
        
        <div class="footer-column">
            <h3>
                <% if (user && user.role === 'admin') { %>
                    Quick Links
                <% } else { %>
                    Shop
                <% } %>
            </h3>
            <ul class="footer-links">
                <% if (user && user.role === 'admin') { %>
                    <li><a href="/inventory">Inventory</a></li>
                    <li><a href="/admin/orders">Orders</a></li>
                    <li><a href="/admin/users">User Management</a></li>
                    <li><a href="/addProduct">Add Product</a></li>
                <% } else { %>
                    <li><a href="/shopping">All Products</a></li>
                    <li><a href="#">Special Offers</a></li>
                    <li><a href="#">New Arrivals</a></li>
                    <li><a href="#">Weekly Deals</a></li>
                <% } %>
            </ul>
        </div>
        
        
        
        <div class="footer-column">
            <h3>
                <% if (user && user.role === 'admin') { %>
                    Account
                <% } else { %>
                    My Account
                <% } %>
            </h3>
            <ul class="footer-links">
                <% if (user) { %>
                    <% if (user.role === 'admin') { %>
                        <li><a href="/">Dashboard</a></li>
                        <li><a href="/logout">Logout</a></li>
                    <% } else { %>
                        <li><a href="/orders">My Orders</a></li>
                        <li><a href="/cart">Shopping Cart</a></li>
                        <li><a href="/logout">Logout</a></li>
                    <% } %>
                <% } else { %>
                    <li><a href="/login">Login</a></li>
                    <li><a href="/register">Register</a></li>
                <% } %>
            </ul>
        </div>
    </div>
    
    <div class="footer-bottom">
        <p>
            &copy; 2025 freshmart(YuChen)<% if (user && user.role === 'admin') { %> Admin Panel<% } %>. All rights reserved.
        </p>
    </div>
</footer>
