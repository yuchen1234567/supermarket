<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Orders - FreshMart Admin</title>
    <link href="https://cdn.bootcdn.net/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/navbar', { user: user, currentPage: 'adminOrders', pageTitle: 'Order Management' }) %>
    
    <!-- Main Content -->
    <div class="container">
        <h2 class="section-title">
            <i class="fas fa-file-invoice-dollar"></i> All Orders
        </h2>
        
        <!-- Search Box -->
        <div style="margin-bottom: 30px;">
            <form method="GET" action="/admin/orders" style="max-width: 600px;">
                <div style="display: flex; gap: 10px;">
                    <input 
                        type="text" 
                        name="search" 
                        class="form-control" 
                        placeholder="Search by Order ID, Customer Name, Email, or Status..."
                        value="<%= searchQuery || '' %>"
                        style="flex: 1;"
                    >
                    <button type="submit" class="btn" style="white-space: nowrap;">
                        <i class="fas fa-search"></i> Search
                    </button>
                    <% if (searchQuery && searchQuery.trim() !== '') { %>
                        <a href="/admin/orders" class="btn btn-secondary" style="white-space: nowrap;">
                            <i class="fas fa-times"></i> Clear
                        </a>
                    <% } %>
                </div>
            </form>
            <% if (searchQuery && searchQuery.trim() !== '') { %>
                <p style="margin-top: 10px; color: var(--dark-gray); font-size: 14px;">
                    <i class="fas fa-info-circle"></i> 
                    Showing results for: <strong>"<%= searchQuery %>"</strong>
                    <% if (orders && orders.length > 0) { %>
                        (<%= orders.length %> order<%= orders.length === 1 ? '' : 's' %> found)
                    <% } %>
                </p>
            <% } %>
        </div>
        
        <% if (error) { %>
            <div class="alert alert-error"><%= error %></div>
        <% } %>
        
        <% if (orders && orders.length > 0) { %>
            <div style="overflow-x: auto;">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Customer</th>
                            <th>Email</th>
                            <th>Date</th>
                            <th>Items</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(order => { %>
                            <tr>
                                <td><strong>#<%= order.id %></strong></td>
                                <td><%= order.username %></td>
                                <td><%= order.email %></td>
                                <td>
                                    <%= new Date(order.created_at).toLocaleDateString('en-SG', { 
                                        year: 'numeric', 
                                        month: 'short', 
                                        day: 'numeric' 
                                    }) %>
                                </td>
                                <td><%= order.item_count || 0 %></td>
                                <td style="color: var(--primary); font-weight: bold;">
                                    $<%= parseFloat(order.total).toFixed(2) %>
                                </td>
                                <td>
                                    <form action="/admin/order/<%= order.id %>/status" method="POST" style="margin: 0;">
                                        <select name="status" class="form-control" onchange="this.form.submit()" 
                                                style="padding: 6px 12px; font-size: 14px;">
                                            <option value="Pending" <%= (order.status === 'Pending') ? 'selected' : '' %>>Pending</option>
                                            <option value="Processing" <%= (order.status === 'Processing') ? 'selected' : '' %>>Processing</option>
                                            <option value="Completed" <%= (order.status === 'Completed') ? 'selected' : '' %>>Completed</option>
                                            <option value="Cancelled" <%= (order.status === 'Cancelled') ? 'selected' : '' %>>Cancelled</option>
                                        </select>
                                    </form>
                                </td>
                                <td>
                                    <div style="display: flex; gap: 8px;">
                                        <a href="/order/<%= order.id %>" class="btn btn-secondary btn-sm">
                                            <i class="fas fa-info-circle"></i> Details
                                        </a>
                                        <a href="/admin/order/<%= order.id %>/delete" 
                                           class="btn btn-danger btn-sm"
                                           onclick="return confirm('Are you sure you want to delete this order?');">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div style="text-align: center; padding: 80px 20px;">
                <i class="fas <%= searchQuery && searchQuery.trim() !== '' ? 'fa-search' : 'fa-file-invoice' %>" 
                   style="font-size: 80px; color: var(--dark-gray); margin-bottom: 20px;"></i>
                <h3 style="color: var(--dark-gray);">
                    <%= searchQuery && searchQuery.trim() !== '' ? 'No matching orders found' : 'No orders yet' %>
                </h3>
                <p style="color: var(--dark-gray);">
                    <%= searchQuery && searchQuery.trim() !== '' ? 'Try a different search term or clear your search' : 'Orders from customers will appear here' %>
                </p>
                <% if (searchQuery && searchQuery.trim() !== '') { %>
                    <a href="/admin/orders" class="btn" style="margin-top: 20px;">
                        <i class="fas fa-arrow-left"></i> View All Orders
                    </a>
                <% } %>
            </div>
        <% } %>
    </div>
    
    <%- include('partials/footer', { user: user }) %>
    
    <script src="/js/main.js"></script>
</body>
</html>
