<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management - FreshMart Admin</title>
    <link href="https://cdn.bootcdn.net/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/navbar', { user: user, currentPage: 'users', pageTitle: 'User Management' }) %>
    
    <!-- Main Content -->
    <div class="container">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
            <h2 class="section-title" style="margin: 0;">
                <i class="fas fa-users"></i> User Management
            </h2>
            <a href="/admin/users/create" class="btn">
                <i class="fas fa-user-plus"></i> New Administrator
            </a>
        </div>
        
        <% if (messages && messages.success && messages.success.length > 0) { %>
            <div class="alert alert-success">
                <%= messages.success[0] %>
            </div>
        <% } %>
        
        <% if (messages && messages.error && messages.error.length > 0) { %>
            <div class="alert alert-error">
                <%= messages.error[0] %>
            </div>
        <% } %>
        
        <% if (error) { %>
            <div class="alert alert-error"><%= error %></div>
        <% } %>
        
        <% if (users && users.length > 0) { %>
            <div style="overflow-x: auto;">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Contact</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(u => { %>
                            <tr>
                                <td><strong>#<%= u.id %></strong></td>
                                <td><%= u.username %></td>
                                <td><%= u.email %></td>
                                <td><%= u.address %></td>
                                <td><%= u.contact %></td>
                                <td>
                                    <% if (u.role === 'admin') { %>
                                        <span style="padding: 4px 12px; border-radius: 12px; font-size: 12px; font-weight: 500; background-color: #d1e7dd; color: #0f5132;">
                                            <i class="fas fa-shield-alt"></i> Admin
                                        </span>
                                    <% } else { %>
                                        <span style="padding: 4px 12px; border-radius: 12px; font-size: 12px; font-weight: 500; background-color: #cfe2ff; color: #084298;">
                                            <i class="fas fa-user"></i> User
                                        </span>
                                    <% } %>
                                </td>
                                <td>
                                    <div style="display: flex; gap: 8px;">
                                        <a href="/admin/users/edit/<%= u.id %>" 
                                           class="btn btn-secondary btn-sm"
                                           title="Modify">
                                            <i class="fas fa-user-edit"></i>
                                        </a>
                                        <% if (u.id !== user.id) { %>
                                            <a href="/admin/users/delete/<%= u.id %>" 
                                               class="btn btn-danger btn-sm"
                                               title="Remove"
                                               onclick="return confirm('Are you sure you want to remove this user?');">
                                                <i class="fas fa-user-times"></i>
                                            </a>
                                        <% } else { %>
                                            <button class="btn btn-secondary btn-sm" disabled title="Cannot delete yourself">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            
            <!-- Summary Stats -->
            <div style="margin-top: 30px; display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px;">
                <div style="background-color: var(--white); padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.05);">
                    <div style="color: var(--dark-gray); font-size: 14px; margin-bottom: 5px;">Total Users</div>
                    <div style="font-size: 28px; font-weight: bold; color: var(--primary);"><%= users.length %></div>
                </div>
                <div style="background-color: var(--white); padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.05);">
                    <div style="color: var(--dark-gray); font-size: 14px; margin-bottom: 5px;">Admin Users</div>
                    <div style="font-size: 28px; font-weight: bold; color: var(--success);">
                        <%= users.filter(u => u.role === 'admin').length %>
                    </div>
                </div>
                <div style="background-color: var(--white); padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.05);">
                    <div style="color: var(--dark-gray); font-size: 14px; margin-bottom: 5px;">Customer Users</div>
                    <div style="font-size: 28px; font-weight: bold; color: var(--primary);">
                        <%= users.filter(u => u.role === 'user').length %>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div style="text-align: center; padding: 80px 20px;">
                <i class="fas fa-users" style="font-size: 80px; color: var(--dark-gray); margin-bottom: 20px;"></i>
                <h3 style="color: var(--dark-gray);">No users found</h3>
                <p style="color: var(--dark-gray); margin-bottom: 30px;">Start by creating an admin user</p>
                <a href="/admin/users/create" class="btn" style="font-size: 18px; padding: 15px 40px;">
                    <i class="fas fa-user-plus"></i> Add Administrator
                </a>
            </div>
        <% } %>
    </div>
    
    <%- include('partials/footer', { user: user }) %>
    
    <script src="/js/main.js"></script>
</body>
</html>
